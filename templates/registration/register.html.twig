{% extends 'base.html.twig' %}

{% block title %}{{ 'register.title'|trans }}{% endblock %}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}
{% block body %}
    <main class="container">
        <section class="py-5">
            <h1 class="text-center py-4">{{ 'register.title'|trans }}</h1>
            <div class="row mb-5">
                <div class="col-8 offset-2 bg-light text-dark p-4">
                    {{ form_start(registrationForm) }}
                    <div class="row justify-content-around mb-4">
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="row justify-content-around mb-4">
                        {{ form_row(registrationForm.password) }}
                    </div>
                    <div class="row justify-content-around mb-4">
                        <div class="col-6" >
                            {{ form_row(registrationForm.firstName ) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(registrationForm.lastName ) }}
                        </div>
                    </div>
                    <div class="row justify-content-around mb-4">
                        <div class="col-6" >
                            {{ form_row(registrationForm.birthDate ) }}
                        </div>
                        <div class="col-6" >

                        </div>
                    </div>







                    {{ form_row(registrationForm.agreeTerms) }}
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </section>
    </main>
{% endblock %}
